{
  "private": true,
  "scripts": {
    "build:tsc": "./node_modules/typescript/bin/tsc -p ./src/ --outDir ./build",
    "build:browserify": "node ./node_modules/browserify/bin/cmd ./build/app.js -o ./build/bundle.js",
    "build:copy:html": "cp src/index.html ./build/",
    "build:copy:assets": "cp -R src/assets ./build/",
    "build:copy:node_modules": "cp ./node_modules/director/build/director.js ./node_modules/todomvc-common/base.css ./node_modules/todomvc-app-css/index.css ./build/",
    "build:copy": "npm run build:copy:html && npm run build:copy:assets && npm run build:copy:node_modules",
    "build": "npm run build:tsc && npm run build:browserify && npm run build:copy",
    "build:clean": "rm -rf ./build && npm run build",
    "start": "node ./serve.js",
    "start:reset": "killall node",
    "restart": "npm run start:reset ; npm run build:clean && npm run start &",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "test": "npm run restart && npm run cy:run"
  },
  "dependencies": {
    "@types/classnames": "^2.2.6",
    "@types/react": "^16.7.0",
    "@types/react-dom": "^16.0.11",
    "classnames": "^2.2.6",
    "director": "^1.2.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "todomvc-app-css": "^2.0.0",
    "todomvc-common": "^1.0.1"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "cypress": "15.8.0",
    "cypress-real-events": "1.15.0",
    "node-static": "^0.7.11",
    "typescript": "5.9.3"
  }
}
