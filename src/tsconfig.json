{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "lib": ["dom", "dom.iterable", "es2015", "es2017"],
        "outDir": "../build"
    },
    "filesGlob": [
        "**/*.ts",
        "**/*.tsx",
        "!node_modules/**"
    ],
    "files": [
        "models/constants.ts",
        "types/interfaces.d.ts",
        "models/todoModel.ts",
        "models/utils.ts",
        "app.tsx",
        "components/footer.tsx",
        "components/todoItem.tsx"
    ],
    "exclude": [],
    "baseUrl": "types",
    "typeRoots": ["types"]
}
